{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ client.title }}</td>
            </tr>
            <tr>
                <th>Alias</th>
                <td>{{ client.alias }}</td>
            </tr>
            <tr>
                <th>Sender</th>
                <td>{{ client.sender }}</td>
            </tr>
            <tr>
                <th>AllowIPs</th>
                <td>{{ client.allowIPs }}</td>
            </tr>
            <tr>
                <th>ClientSecret</th>
                <td>{{ client.clientSecret }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ client.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ client.updatedAt ? client.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}">back to list</a>

    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}