{% extends 'base.html.twig' %}

{% block title %}SendList index{% endblock %}

{% block body %}
    <h1>SendList index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created_at</th>
                <th>Emails</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for send_list in send_lists %}
            <tr>
                <td>{{ send_list.id }}</td>
                <td>{{ send_list.name }}</td>
                <td>{{ send_list.createdAt ? send_list.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ send_list.emails }}</td>
                <td>
                    <a href="{{ path('send_list_show', {'id': send_list.id}) }}">show</a>
                    <a href="{{ path('send_list_edit', {'id': send_list.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('send_list_new') }}">Create new</a>
{% endblock %}