<div class="modal-title">
    <h5>{{ title }}</h5>
</div>
<div class="modal-content">
    <div class="row">
        <div class="col s12">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ dispatch.id }}</td>
                    </tr>
                    <tr>
                        <th>Название</th>
                        <td>{{ dispatch.name }}</td>
                    </tr>
                    <tr>
                        <th>Тема</th>
                        <td>{{ dispatch.subject }}</td>
                    </tr>
                    <tr>
                        <th>От кого, имя | email</th>
                        <td>{{ dispatch.nameFrom }} | {{  dispatch.emailFrom }}</td>
                    </tr>
                    <tr>
                        <th>Дата создания</th>
                        <td>{{ dispatch.datetime ? dispatch.datetime|date('m-m-Y H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Шаблон</th>
                        <td>{{ dispatch.template.title }}</td>
                    </tr>
                    <tr>
                        <th>Список рассылки</th>
                        <td>{{ dispatch.sendList.name }}</td>
                    </tr>
                    <tr>
                        <th>Количество email | Отправлено | Доставлено</th>
                        <td>{{ dispatch.sendList.emails|split('\n')|length }} | 0 | 0</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
