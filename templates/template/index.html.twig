{% extends 'base.html.twig' %}

{% block title %}Template index{% endblock %}

{% block body %}
    <h1>Template index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Alias</th>
                <th>IsActive</th>
                <th>IsPrivate</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for template in templates %}
            <tr>
                <td>{{ template.id }}</td>
                <td>{{ template.title }}</td>
                <td>{{ template.alias }}</td>
                <td>{{ template.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ template.isPrivate ? 'Yes' : 'No' }}</td>
                <td>{{ template.text }}</td>
                <td>
                    <a href="{{ path('template_show', {'id': template.id}) }}">show</a>
                    <a href="{{ path('template_edit', {'id': template.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('template_new') }}">Create new</a>
{% endblock %}